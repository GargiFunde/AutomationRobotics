<Window x:Class="RobotConsole.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RobotConsoleWindow" Height="500" Width="800" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid>       
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>
        <Label Name="lblStatus" Grid.Row="1" Content="Current status: " Margin="10,0,0,0" />
        <Button  Grid.Row="2" x:Name="btnSignIn" Content="Sign In" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="75"/>
     </Grid>
</Window>
